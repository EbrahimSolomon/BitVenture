@model ImportsViewModel

@using BitVenture_EbrahimSolomon.Models

<h2>Master Records</h2>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Account Holder</th>
            <th>Branch Code</th>
            <th>Account Number</th>
            <th>Account Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model.MasterRecords)
        {
            <tr class="master-record" data-id="@record.ID">
                <td>@record.AccountHolder</td>
                <td>@record.BranchCode</td>
                <td>@record.AccountNumber</td>
                <td>@record.AccountTypeDisplayName</td>
            </tr>
        }
    </tbody>
</table>

<h2>Detail Records</h2>
<table class="table table-striped table-bordered table-hover detail-table">

    <thead>
        <tr>
            <th>Transaction Date</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Effective Status Date</th>
            <th>Time Breached</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model.DetailRecords)
        {
            <tr>
                <td>@record.TransactionDate.ToShortDateString()</td>
                <td>@record.Amount</td>
                <td>@record.StatusDisplay</td>
                <td>@record.EffectiveStatusDate.ToShortDateString()</td>
                <td>@(record.TimeBreached ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>


